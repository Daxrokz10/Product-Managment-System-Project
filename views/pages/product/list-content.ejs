<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Products</h3>
  <a href="/product/add" class="btn btn-success">+ Add New</a>
</div>

<div class="card p-3">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr>
          <td><img src="<%= product.image %>" alt="<%= product.name %>" style="width:50px; border-radius:6px;"></td>
          <td><%= product.name %></td>
          <td>â‚¹<%= product.price %></td>
          <td><%= product.category %></td>
          <td><%= product.stock %></td>
          <td>
            <a href="/products/edit/<%= product._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/products/delete/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
