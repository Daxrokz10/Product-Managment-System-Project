<%- include('../../partials/header') %>

  <div class="main-panel vh-100">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-12 grid-margin stretch-card">
          <div class="card vw-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="card-title">Products</h4>
                <a href="/product/add" class="btn btn-success btn-sm">+ Add New</a>
              </div>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Image</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Category</th>
                      <th>Stock</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach(product => { %>
                      <tr>
                        <td style="width:70px;"><img src="<%= product.image || '/images/samples/blank.png' %>" alt="<%= product.name %>" style="width:50px; border-radius:6px;"></td>
                        <td><%= product.name %></td>
                        <td>â‚¹<%= product.price %></td>
                        <td><%= product.category %></td>
                        <td><%= product.stock %></td>
                        <td>
                          <a href="/product/edit/<%= product._id %>" class="btn btn-sm btn-warning me-1">Edit</a>
                          <a href="/product/delete/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('../../partials/footer') %>