  <script>
    // small helper to wire the themed file upload UI: .file-upload-browse -> opens file input
    document.addEventListener('click', function (e) {
      if (e.target && e.target.classList.contains('file-upload-browse')) {
        var container = e.target.closest('.input-group');
        if (!container) return;
        var fileInput = container.previousElementSibling; // the actual file input placed before the .input-group
        if (fileInput && fileInput.type === 'file') {
          fileInput.click();
        }
      }
    });
    // show selected file name
    document.addEventListener('change', function (e) {
      if (e.target && e.target.type === 'file') {
        var filenameInput = e.target.parentElement.querySelector('.file-upload-info');
        if (filenameInput) filenameInput.value = e.target.files && e.target.files.length ? e.target.files[0].name : '';
      }
    });
  </script>
